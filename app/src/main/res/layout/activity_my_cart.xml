<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/heavyrain"
    tools:context=".MyCartActivity">

    <Button
        android:id="@+id/btnBackMyCart"
        android:layout_width="116dp"
        android:layout_height="41dp"
        android:layout_marginTop="636dp"
        android:layout_marginBottom="54dp"
        android:text="@string/back"
        app:backgroundTint="@color/lightBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txtVMyCartTitle"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="@string/myCart"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgVCartIcon" />

    <ImageView
        android:id="@+id/imgVCartIcon"
        android:layout_width="138dp"
        android:layout_height="97dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/imgDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cart" />

    <TextView
        android:id="@+id/txtVCartContents"
        android:layout_width="321dp"
        android:layout_height="386dp"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="44dp"
        android:text="@string/myCart"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnBackMyCart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVMyCartTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>